<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/is_added_member_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/is_add_member"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="visible"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="@dimen/nav_image_circular_border_width"
            android:contentDescription="string@/image_contentDescription"
            android:src="@drawable/ic_nav_user"
            tools:visibility="visible"
            >
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/is_added_member_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </TextView>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/is_selected_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="@dimen/nav_image_circular_border_width"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/baseline_add_circle_24"
        tools:visibility="visible"
        >
    </de.hdodenhof.circleimageview.CircleImageView>
</LinearLayout>