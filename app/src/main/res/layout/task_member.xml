<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_assigned_member_section"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/task_member_img"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/ic_nav_user"
        android:visibility="visible"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="@dimen/nav_image_circular_border_width"
        app:layout_constraintBottom_toTopOf="@+id/member_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/task_member_email"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
    </TextView>
</LinearLayout>